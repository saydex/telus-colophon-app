    "@octokit/webhooks": "^6.0.1",
    "body-parser": "^1.18.3",
    "connect-pg-simple": "^5.0.0",
    "cookie-parser": "^1.4.4",
    "dayjs": "^1.8.12",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "oh-my-log": "^5.0.1",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "pg": "^7.9.0",
    "pug": "^2.0.3",
    "tabler-ui": "^0.0.34",
    "tap": "^12.6.1",
    "uncaught-extender": "^1.0.1",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "nodemon": "^1.18.11"
  }
}
